<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.android.goforlunch.activities.MainActivity">

        <FrameLayout
            android:id="@+id/fragment_container_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_navigation_id"
            android:layout_alignParentTop="true">
        </FrameLayout>

        <!-- By default, the background color of the Navigation View is transparent -->
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:elevation="8dp"
            app:menu="@menu/navigation_bottom_menu"
            android:background="?android:attr/windowBackground"
            />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_view_menu"
        app:headerLayout="@layout/nav_drawer_header"/>

</android.support.v4.widget.DrawerLayout>